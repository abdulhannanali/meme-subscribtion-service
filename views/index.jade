extends ./layouts/layout.jade

block content
	.container
		.row
			.col-sm-12.text-center
				h1 MemeGenerator Email Subscription
				img(src="//i.imgur.com/JRbEtkf.jpg" width="340" height="240")
		.row
			.col-sm-12
				form(action="/subscribe" method="POST")
					.form-group
						label(for="name" required) Name
						input.form-control(type="text" name="name" required)
					.form-group
						label(for="email" required) Email
						input.form-control(type="email" name="email" required)
					.form-group
						button(type="submit" class="btn btn-default btn-primary") Subscribe